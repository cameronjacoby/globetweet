<% include ../partials/header %>

    <title>GlobeTweet | Home</title>
    <meta name='viewport' content='initial-scale=1,maximum-scale=1,user-scalable=no' />    
    <link href="https://api.tiles.mapbox.com/mapbox.js/v2.0.0/mapbox.css" rel='stylesheet' />
    
  </head>

  <body>

    <% include ../partials/nav_auth %>
    
    <!-- start container -->
    <div class="container page-content">
      <!-- start row -->
      <div class="row">
        <!-- start column -->
        <div class="col-xs-6 col-md-4">
          <!-- start row -->
          <div class="row" id="left-search">

            <form role="form" method="post" action="/search">
              <div class="form-group">
                <label for="keyword"><h2>Search for Tweets</h2></label>
              </div>
              <div class="form-group">
                <div class="col-xs-8">
                  <input type="text" name="keyword" class="form-control" id="keyword" placeholder="Search Keyword" autofocus>
                </div>
                <div class="col-xs-4">
                  <input type="submit" class="btn btn-default">
                </div>
              </div>     
            </form>

            <div id="tweet-count">
              <h4>Tweets about <%= searchKey %>: <div id="counter"></div></h4>
            </div>

            <div id="load-msg">
              <h4>Fetching tweets about <%= searchKey %>...</h4>
            </div>

            <p><div id="wait-msg">We can't find any tweets related to <%= searchKey %> at the moment. Keep waiting or try another search term!</div></p>
          </div>
          <!-- end row -->
          <!-- start row -->
          <div class="row" id="left-scroll">
            <!-- start column -->
            <div class="col-md-12">
              <div id="tweetd"></div>
            </div>
            <!-- end column -->
          </div>
          <!-- end row -->
        </div>
        <!-- end column -->
        <!-- start column -->
        <div class="col-xs-6 col-md-8">
          <div id="map"></div>
        </div>
        <!-- end column -->
      </div>
      <!-- end row -->
    </div>
    <!-- end container -->

    <!-- link to scripts -->
    <script src="http://code.jquery.com/jquery-1.11.1.js"></script>
    <script src="http://maxcdn.bootstrapcdn.com/bootstrap/3.2.0/js/bootstrap.min.js"></script>
    <script src='https://api.tiles.mapbox.com/mapbox.js/v2.0.0/mapbox.js'></script>
    <script src="/socket.io/socket.io.js"></script>
    <script src="scripts/globe_tweet.js"></script>

  </body>
</html>