<!DOCTYPE html>
<html>

  <head>
    <meta charset=utf-8 />
    <title>GlobeTweet | Home</title>
    <meta name='viewport' content='initial-scale=1,maximum-scale=1,user-scalable=no' />

    <!-- link to styles -->
    <link href="http://maxcdn.bootstrapcdn.com/bootstrap/3.2.0/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://api.tiles.mapbox.com/mapbox.js/v2.0.0/mapbox.css" rel='stylesheet' />
    <link rel="stylesheet" href="styles/custom_style.css">
  
    <!-- link to favicon -->
    <link rel="icon" href="images/tw_logo.png">
  </head>

  <body>

    <nav class="navbar navbar-default navbar-inverse navbar-fixed-top">
      <div class="container">
        <div class="navbar-header">
          <a class="navbar-brand" href="/">GlobeTweet</a>
        </div>
        <ul class="nav navbar-nav">
          <li class="active"><a href="/">Home</a></li>

          <% if (!isAuthenticated) { %>
            <li><a href="/signup">Sign Up</a></li>
            <li><a href="/login">Log In</a></li>
          <% } else { %>
            <li><a href="/"><%= user.username %></a></li>
            <li><a href="/logout">Log Out</a></li>
          <% } %>

        </ul>
      </div>
    </nav>
    
    <!-- start container -->
    <div class="container page-content">
      <!-- start row -->
      <div class="row">
        <!-- start column -->
        <div class="col-xs-6 col-md-4">
          <!-- start row -->
          <div class="row" id="left-search">

            <form role="form" method="post" action="/search">
              <div class="form-group">
                <label for="keyword"><h2>Search for Tweets</h2></label>
              </div>
              <div class="form-group">
                <div class="col-xs-8">
                  <input type="text" name="keyword" class="form-control" id="keyword" placeholder="Search Keyword" autofocus>
                </div>
                <div class="col-xs-4">
                  <input type="submit" class="btn btn-default">
                </div>
              </div>     
            </form>

            <h4><div id="tweet-count">Tweets about <%= searchKey %>: <div id="counter"></div></div></h4>

            <h4><div id="load-msg">Fetching tweets about <%= searchKey %>...</div></h4>

            <p><div id="done-msg">Finished streaming tweets about <%= searchKey %>. Try another search term!</div></p>
          </div>
          <!-- end row -->
          <!-- start row -->
          <div class="row" id="left-scroll">
            <!-- start column -->
            <div class="col-md-12">
              <div id="tweetd"></div>
            </div>
            <!-- end column -->
          </div>
          <!-- end row -->
        </div>
        <!-- end column -->
        <!-- start column -->
        <div class="col-xs-6 col-md-8">
          <div id="map"></div>
        </div>
        <!-- end column -->
      </div>
      <!-- end row -->
    </div>
    <!-- end container -->

    <!-- link to scripts -->
    <script src="http://code.jquery.com/jquery-1.11.1.js"></script>
    <script src="http://maxcdn.bootstrapcdn.com/bootstrap/3.2.0/js/bootstrap.min.js"></script>
    <script src='https://api.tiles.mapbox.com/mapbox.js/v2.0.0/mapbox.js'></script>
    <script src="/socket.io/socket.io.js"></script>
    <script src="scripts/main.js"></script>

  </body>
</html>




