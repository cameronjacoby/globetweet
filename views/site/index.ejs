<!DOCTYPE html>
<html>

  <head>
    <meta charset=utf-8 />
    <title>GlobeTweet</title>
    <meta name='viewport' content='initial-scale=1,maximum-scale=1,user-scalable=no' />

    <!-- link to scripts -->
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.7.2/jquery.js"></script>
    <script src='https://api.tiles.mapbox.com/mapbox.js/v2.0.0/mapbox.js'></script>
    <script src="/socket.io/socket.io.js"></script>

    <!-- link to styles -->
    <link href='https://api.tiles.mapbox.com/mapbox.js/v2.0.0/mapbox.css' rel='stylesheet' />
    <link rel="stylesheet" href="styles/main.css">
  </head>

  <body>
    <div id="content">
      <h1>GlobeTweet</h1>

      <form method="post" action="/search">
        <p><label for="location">Search a Location:</label><p>
        <p><input type="text" name="location" id="location" placeholder="Type any city, state, or country" autofocus></p>
        <p><input type="submit"></p>
      </form>

      <h3>Currently Viewing: <div id="counter"></div> Tweets about <%= location %></h3>

      <div id="tweetd"></div>
    </div>

    <div id="map"></div>

    <script>
      window.addEventListener('load', function() {
        geocoder.query('<%= location %>' || 'San Francisco', showMap);
      });
    </script>

    <script src="scripts/main.js"></script>   
  </body>
</html>




