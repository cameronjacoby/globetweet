<!DOCTYPE html>
<html>

  <head>
    <meta charset=utf-8 />
    <title>GlobeTweet | Home</title>
    <meta name='viewport' content='initial-scale=1,maximum-scale=1,user-scalable=no' />

    <!-- link to styles -->
    <link href="http://maxcdn.bootstrapcdn.com/bootstrap/3.2.0/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://api.tiles.mapbox.com/mapbox.js/v2.0.0/mapbox.css" rel='stylesheet' />
    <link rel="stylesheet" href="styles/custom_style.css">
  
    <!-- link to favicon -->
    <link rel="icon" href="">
  </head>

  <body>

    <nav class="navbar navbar-default navbar-inverse navbar-fixed-top">
      <div class="container">
        <div class="navbar-header">
          <a class="navbar-brand" href="/">GlobeTweet</a>
        </div>
        <ul class="nav navbar-nav">
          <li class="active"><a href="/">Home</a></li>

          <% if (!isAuthenticated) { %>
            <li><a href="/signup">Sign Up</a></li>
            <li><a href="/login">Log In</a></li>
          <% } else { %>
            <li><a href="/"><%= user.username %></a></li>
            <li><a href="/logout">Log Out</a></li>
          <% } %>

        </ul>
      </div>
    </nav>

    <div class="row" id="page-content">
      <div class="col-xs-4" id="left-scroll">

        <form role="form" method="post" action="/search">
          <div class="form-group">
            <label for="keyword"><h2>Search for Tweets</h2></label>
          </div>
          <div class="form-group">
            <input type="text" name="keyword" class="form-control" id="keyword" placeholder="Type any search keyword" autofocus>
          </div>
          <div class="form-group">
            <input type="submit" class="btn btn-default">
          </div>
          
        </form>

        <h4><div id="tweet-count">Tweets about <%= searchKey %>: <div id="counter"></div></div></h4>

        <h4><div id="load-msg">Fetching tweets from Twitter...</div></h4>

        <div id="tweetd"></div>

      </div>

      <div class="col-xs-8">
        <div id="map"></div>
      </div>

    </div>

    <!-- link to scripts -->
    <script src="http://code.jquery.com/jquery-1.11.1.js"></script>
    <script src="http://maxcdn.bootstrapcdn.com/bootstrap/3.2.0/js/bootstrap.min.js"></script>
    <script src='https://api.tiles.mapbox.com/mapbox.js/v2.0.0/mapbox.js'></script>
    <script src="/socket.io/socket.io.js"></script>
    <script src="scripts/main.js"></script>

  </body>
</html>




